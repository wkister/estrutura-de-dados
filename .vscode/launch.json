{
  "version": "0.2.0",
  "configurations": [
    // Configurações Python
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },

    // Configurações C/C++
    {
      "name": "C/C++: Makefile build and debug binário",
      "type": "cppdbg",
      "request": "launch",
      "program": "${fileDirname}/bin/${fileBasenameNoExtension}",
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "Build C Project",
      "postDebugTask": "Clean Binary from bin folder",
      "miDebuggerPath": "/usr/bin/gdb"
    },
    {
      "name": "C/C++: gcc build and debug (auto-clean)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${fileDirname}/${fileBasenameNoExtension}",
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "C/C++: gcc build active file",
      "postDebugTask": "Clean Binary After Debug",
      "miDebuggerPath": "/usr/bin/gdb"
    }
  ]
}