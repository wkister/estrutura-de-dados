{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C Project",
            "type": "shell",
            "command": "make",
            "args": ["all"],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Run C Program",
            "type": "shell",
            "command": "make",
            "args": ["run"],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": "test",
            "dependsOn": "Build C Project",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Clean C Project",
            "type": "shell",
            "command": "make",
            "args": ["clean"],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Build All C Projects",
            "type": "shell",
            "command": "make",
            "args": ["all-recursive"],
            "options": {
                "cwd": "${workspaceFolder}/C"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Debug with Valgrind (Ponteiros)",
            "type": "shell",
            "command": "make",
            "args": ["valgrind"],
            "options": {
                "cwd": "${workspaceFolder}/C/ponteiros"
            },
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}